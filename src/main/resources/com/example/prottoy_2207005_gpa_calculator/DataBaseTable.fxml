<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500" prefWidth="736.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.prottoy_2207005_gpa_calculator.controllers.DatabaseTableController">



    <children>
        <VBox prefHeight="500.0" prefWidth="736.0" spacing="10" style="-fx-background-color: #78c1c1;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0">

            <TableView fx:id="courseTable" prefHeight="400" prefWidth="691.0" style="-fx-background-color: #78c1c1;">
                <columns>
                    <TableColumn fx:id="colCode" prefWidth="100" text="Course Code" />
                    <TableColumn fx:id="colName" prefWidth="200" text="Course Name" />
                    <TableColumn fx:id="colCredit" prefWidth="80" text="Credit" />
                    <TableColumn fx:id="colT1" prefWidth="120" text="Teacher 1" />
                    <TableColumn fx:id="colT2" prefWidth="120" text="Teacher 2" />
                    <TableColumn fx:id="colGrade" prefWidth="80" text="Grade" />
                </columns>
            </TableView>

           <HBox spacing="15" style="-fx-alignment: center;">
               <Button fx:id="addButton" onAction="#addCourse" style="-fx-font-size: 16px; -fx-padding: 5 20;" text="Add" />
               <Button fx:id="updateButton" onAction="#updateCourse" style="-fx-font-size: 16px; -fx-padding: 5 20;" text="Update" />
               <Button fx:id="deleteButton" onAction="#deleteClicked" style="-fx-font-size: 16px; -fx-padding: 5 20;" text="Delete" />
          </HBox>

        </VBox>
    </children>
</AnchorPane>
