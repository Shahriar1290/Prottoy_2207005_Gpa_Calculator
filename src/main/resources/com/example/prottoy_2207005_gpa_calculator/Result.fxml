<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" style="-fx-background-color: lightgray;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ResultController">

    <children>

        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: #78c1c1;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <padding>
                <Insets bottom="20" left="30" right="30" top="30" />
            </padding>

            <!-- Title -->
            <Label style="-fx-font-size: 26px; -fx-font-weight: bold;" text="GPA Result Sheet" />

            <!-- Result Table -->
            <TableView fx:id="resultTable" prefHeight="300" prefWidth="600" style="-fx-background-color: #78c1c1;">
                <columns>
                    <TableColumn fx:id="rName" prefWidth="150" text="Course Name" />
                    <TableColumn fx:id="rCode" prefWidth="100" text="Course Code" />
                    <TableColumn fx:id="rCredit" prefWidth="60" text="Credit" />
                    <TableColumn fx:id="rT1" prefWidth="120" text="Teacher 1" />
                    <TableColumn fx:id="rT2" prefWidth="120" text="Teacher 2" />
                    <TableColumn fx:id="rGrade" prefWidth="80" text="Grade" />
                </columns>
            </TableView>

            <!-- GPA Display -->
            <HBox alignment="CENTER" spacing="10">
                <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Calculated GPA:" />
                <Label fx:id="gpaLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: darkblue;" />
            </HBox>

            <!-- Back Button -->
            <Button onAction="#backHome" style="-fx-font-size: 18px; -fx-padding: 10 20;" text="Back to Home" />

        </VBox>

    </children>

</AnchorPane>
